unit unt3_2;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls;

type
  Tfrm3_2 = class(TForm)
    edtCelsius: TEdit;
    edtFahrenheit: TEdit;
    lblCelsius: TLabel;
    lblFahrenheit: TLabel;
    procedure edtCelsiusChange(Sender: TObject);
    procedure edtFahrenheitChange(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
    function CelsiusToFahr(dCelsius : double) : double;
    function FahrToCelsius(dFahr : double) : double;
  end;

var
  frm3_2: Tfrm3_2;

implementation

{$R *.dfm}

procedure Tfrm3_2.edtCelsiusChange(Sender: TObject);
var
  dFahr, dCels : double;
begin
  dCels := StrToFloat(self.edtCelsius.Text);

  dFahr := self.CelsiusToFahr(dCels);

  self.edtFahrenheit.Text := FloatToStr(dFahr);
end;

procedure Tfrm3_2.edtFahrenheitChange(Sender: TObject);
var
  dFahr, dCels : double;
begin
  dFahr := StrToFloat(self.edtFahrenheit.Text);

  dCels := self.FahrToCelsius(dFahr);

  self.edtCelsius.Text := FloatToStr(dCels);
end;

function Tfrm3_2.CelsiusToFahr(dCelsius: Double) : Double;
begin
  result := (9/5 * dCelsius + 32);
end;

function Tfrm3_2.FahrToCelsius(dFahr: Double) : double;
begin
  result := ((dFahr - 32) * 5) / 9;
end;
end.
